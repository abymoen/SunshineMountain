<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_prices"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:weightSum="20"
    android:background="#E3F8FF"
    tools:context="com.example.aebymoen.sunshinemountain.PricesActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="PRICES"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="#1388FF"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Lift Tickets"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#1388FF"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:text="Child: 40$ \nStudent: 50$ \nGeneral: 70$ \nSenior: 40$ "
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Buy Lift Ticket"
        android:background="@drawable/roundcorners"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Group Lessons"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#1388FF"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:text="Child: 60$ Per Day \nStudent: 70$ Per Day\nGeneral: 90$ Per Day\nSenior: 60$ Per Day "
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Book Group Lesson"
        android:background="@drawable/roundcorners"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Private Lessons"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#1388FF"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:text="Child: 70$ Per Day \nStudent: 80$ Per Day\nGeneral: 100$ Per Day\nSenior: 70$ Per Day "
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Book Private Lesson"
        android:background="@drawable/roundcorners"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>
</LinearLayout>
